[colors]
background = #cc000000
background-alt = #111
foreground = #bbb
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/mybar]
monitor = eDP-1
background = ${colors.background}
foreground = ${colors.foreground}
padding-right = 2

tray-position = right
tray-padding = 3

height = 21
line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

font-0 = Cantarell:style=Bold:size=11;2
font-1 = Hack Nerd Font:style=Regular:pixelsize=11;2
font-2 = monospace:size=10

modules-left = bspwm title
modules-center = date
modules-right = spotify xkeyboard ram battery

[module/date]
type = internal/date
interval = 5

date = %a %d 
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}

label = %date%  %time%

[module/bspwm]
type = internal/bspwm
pin-workspaces = true

label-focused = %name%
label-focused-padding = 2

label-occupied = %name%
label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = 

; Separator in between workspaces
; label-separator = |

[module/title]
type = internal/xwindow
; Available tags:
;   <label> (default)
format = <label>
format-foreground = ${colors.foreground-alt}
format-padding = 2

label = %title%
label-maxlen = 50

; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-padding = 2

format-charging-prefix = " " 
format-charging-prefix-foreground = ${colors.primary}

format-discharging-prefix = " "
format-discharging-prefix-foreground = ${colors.foreground-alt}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = caps lock

format-foreground = ${colors.foreground-alt}
;format-padding = 1

[module/net]
type = custom/script
interval = 3
exec = ~/.config/polybar/network.sh
format-prefix = "   "
format = <label>
format-prefix-foreground = ${colors.foreground-alt}
format-foreground = ${colors.foreground} 
label = %output%
;label-maxlen = 33
format-padding = 1

[module/ram]
type = custom/script
interval = 3
format-prefix = "   "
format = <label>
format-prefix-foreground = ${colors.foreground-alt}
format-foreground = ${colors.foreground} 
exec = ~/.config/polybar/memory.sh
format-padding = 3

[module/spotify]
type = custom/script
interval = 1
format-prefix = "♪  "
format = <label>
format-foreground = ${colors.foreground-alt}
exec = python ~/.config/polybar/spotify_status.py -f '( {song} )'
format-padding = 2

[bar/external]
monitor = HDMI-1
background = ${colors.background}
foreground = ${colors.foreground}

height = 21
line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

font-0 = Cantarell:style=Bold:size=11;2
font-1 = Hack Nerd Font:style=Regular:pixelsize=11;2
font-2 = monospace:size=10

modules-left = bspwm
modules-center = date
modules-right = spotify xkeyboard net
